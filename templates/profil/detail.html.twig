{% extends 'base.html.twig' %}


    {% block body %}

        <h1 class="text-2xl font-bold text-center mt-6">Modification du profil</h1>
        {{ form_start(profilForm) }}
        {{ form_errors(profilForm) }}

        <div class="flex justify-center">
            <div class="bg-white rounded w-1/2 shadow-md p-4 grid grid-cols-1 md:grid-cols-1 lg:grid-cols-2 xl:grid-cols-2 gap-8 ml-4">
                <div class="w-full">
                    <div class="form-label">
                        {{ form_label(profilForm.pseudo) }}

                    </div>
                    <div class="form-row">
                        {{ form_widget(profilForm.pseudo) }}
                        <ul class="error-message">
                            {{ form_errors(profilForm.pseudo) }}
                        </ul>
                    </div>

                    <div class="form-label">
                        {{ form_label(profilForm.nom) }}
                    </div>
                    <div class="form-row">
                        {{ form_widget(profilForm.nom) }}
                        <ul class="error-message">
                            {{ form_errors(profilForm.nom) }}
                        </ul>
                    </div>

                    <div class="form-label">
                        {{ form_label(profilForm.prenom) }}
                    </div>
                    <div class="form-row">
                        {{ form_widget(profilForm.prenom) }}
                        <ul class="error-message">
                            {{ form_errors(profilForm.prenom) }}
                        </ul>
                    </div>

                    <div class="form-label">
                        {{ form_label(profilForm.telephone) }}
                    </div>
                    <div class="form-row">
                        {{ form_widget(profilForm.telephone) }}
                        <ul class="error-message">
                            {{ form_errors(profilForm.telephone) }}
                        </ul>
                    </div>
                    <div class="form-label">
                        {{ form_label(profilForm.email) }}
                    </div>

                    <div class="form-row">
                        {{ form_widget(profilForm.email) }}
                        <ul class="error-message">
                            {{ form_errors(profilForm.email) }}
                        </ul>
                    </div>
                </div>
                {#                ***************************** diviser en 2 ************************** #}
                <div class="w-full">
                    <div class="form-label">
                        {{ form_label(profilForm.siteEni) }}
                    </div>
                    <div class="form-row pb-4">
                        {{ form_widget(profilForm.siteEni) }}
                    </div>

                    <div class="imageProfil">
                        {{ form_widget(profilForm.imageFile, {'attr': {'class': 'mt-4 mb-4'}}) }}
                        {{ form_label(profilForm.imageFile) }}
                    </div>

                    <div class="flex justify-items-center content-center ">
                        <div class="">
                            <a class="ml" href="{{ path('app_forgot_password_request') }}">Changer mot de passe ?</a>
                        </div>
                        <div>
                            {{ form_widget(profilForm.Modifier, {'attr': {'class': 'btn btn-neutral m-1'}}) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {{ form_end(profilForm) }}



