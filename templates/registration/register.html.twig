{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    <h1 class="text-2xl text-center">Inscription</h1>

    {{ form_errors(registrationForm) }}

    <div class="w-full max-w-xl">
        {{ form_start(registrationForm, {'attr': {'class': 'bg-white rounded px-8 pt-6 pb-8 mb-4'}}) }}

        <div class="w-full md:w-1/2 px-3 mb-6 md:mb-0">
            {{ form_label(registrationForm.pseudo) }}
            {{ form_widget(registrationForm.pseudo, {'attr': {'class': 'input input-bordered input-sm w-full max-w-xs m-1'}}) }}
        </div>
        <div class="w-full md:w-1/2 px-3 mb-6 md:mb-0">
            {{ form_label(registrationForm.nom) }}
            {{ form_widget(registrationForm.nom, {'attr': {'class': 'input input-bordered input-sm w-full max-w-xs m-1'}}) }}
        </div>
        <div class="w-full md:w-1/2 px-3 mb-6 md:mb-0">
            {{ form_label(registrationForm.prenom) }}
            {{ form_widget(registrationForm.prenom, {'attr': {'class': 'input input-bordered input-sm w-full max-w-xs m-1'}}) }}
        </div>
        <div class="w-full md:w-1/2 px-3 mb-6 md:mb-0">
            {{ form_label(registrationForm.telephone) }}
            {{ form_widget(registrationForm.telephone, {'attr': {'class': 'input input-bordered input-sm w-full max-w-xs m-1'}}) }}
        </div>
        <div class="w-full md:w-1/2 px-3 mb-6 md:mb-0">
            {{ form_label(registrationForm.email) }}
            {{ form_widget(registrationForm.email, {'attr': {'class': 'input input-bordered input-sm w-full max-w-xs m-1'}}) }}
        </div>
        <br>
        <div class="w-full md:w-1/2 px-3 mb-6 md:mb-0">
            {{ form_label(registrationForm.siteEni) }}
            {{ form_widget(registrationForm.siteEni) }}
        </div>
        <br>
        <div class="w-full md:w-1/2 px-3 mb-6 md:mb-0">
            {{ form_widget(registrationForm.plainPassword) }}
            {#._token permet de valider le token de l'enregistrement du mdp#}
            {{ form_row(registrationForm._token) }}
        </div>



        {{ form_widget(registrationForm.Valider, {'attr': {'class': 'btn btn-neutral m-1'}}) }}

        {{ form_end(registrationForm, {render_rest: false}) }}
    </div>
{% endblock %}
