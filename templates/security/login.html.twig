{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            Vous êtes connecté en tant que {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Déconnexion</a>
        </div>
    {% endif %}

    <h1 class="h3 mb-3 font-weight-normal">Merci de vous connecter</h1>
    <label for="inputEmail">Email : </label>
    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control input input-bordered input-xs w-full max-w-xs" autocomplete="email" required autofocus>
    <label for="inputPassword">Mots de passe : </label>
    <input type="password" name="password" id="inputPassword" class="form-control input input-bordered input-xs w-full max-w-xs" autocomplete="current-password" required>
    <a href="{{ path('app_forgot_password_request')}}">
        Mots de passe oublié ?
    </a>
    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}">

    <button class="btn btn-neutral mt-2" type="submit">
        Connexion
    </button>

</form>
{% endblock %}
