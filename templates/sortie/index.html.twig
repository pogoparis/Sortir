{% extends 'base.html.twig' %}


{% block body %}


    <h1 class="text-2xl text-center mt-2.5">Creation d'une sortie</h1>


    <div class="flex justify-center">
        <div class="flex items-center justify-end space-x-4">
            <div class="flex  bg-white rounded px-8 pt-6 pb-8 mb-4">
                {{ form_start(sortieForm, {'attr': {'class': 'bg-white rounded px-8 pt-6 pb-8 mb-4'}}) }}

                <div class="w-full md:w-1/2 px-3 mb-6 md:mb-0">
                    {{ form_label(sortieForm.nom) }}
                    {{ form_widget(sortieForm.nom, {'attr': {'class': 'input input-bordered input-sm w-full max-w-xs m-1'}}) }}
                </div>
                <div class="w-full md:w-1/2 px-3 mb-6 md:mb-0">
                    {{ form_label(sortieForm.dateHeureDebut) }}
                    {{ form_widget(sortieForm.dateHeureDebut, {'attr': {'class': 'input input-bordered input-sm w-full max-w-xs m-1'}}) }}
                </div>
                <div class="w-full md:w-1/2 px-3 mb-6 md:mb-0">
                    {{ form_label(sortieForm.dateHeureFin) }}
                    {{ form_widget(sortieForm.dateHeureFin, {'attr': {'class': 'input input-bordered input-sm w-full max-w-xs m-1'}}) }}
                </div>
                <div class="w-full md:w-1/2 px-3 mb-6 md:mb-0">
                    {{ form_label(sortieForm.dateLimiteInscription) }}
                    {{ form_widget(sortieForm.dateLimiteInscription, {'attr': {'class': 'input input-bordered input-sm w-full max-w-xs m-1'}}) }}
                </div>
                <br>
                <div class="w-full md:w-1/2 px-3 mb-6 md:mb-0">
                    {{ form_label(sortieForm.nbInscriptionsMax) }}
                    {{ form_widget(sortieForm.nbInscriptionsMax, {'attr': {'class': 'input input-bordered input-sm w-full max-w-xs m-1'}}) }}
                </div>
                <div class="w-full md:w-1/2 px-3 mb-6 md:mb-0">
                    {{ form_label(sortieForm.infosSortie) }}
                    {{ form_widget(sortieForm.infosSortie, {'attr': {'class': 'input input-bordered input-sm w-full max-w-xs m-1'}}) }}
                </div>
                <br>
                <label for="villeListe">Choisir une ville : </label>
                <select id="villeListe" onclick="window.afficherLieu"> Ville
                    <option value="0">Choisir une ville</option>
                </select>
                <br>
                <div class="flex items-center mt-2">
                    <label for="selectLieux" class="mr-2">Choisir un lieu:</label>
                    <select name="{{ field_name(sortieForm.lieu) }}" class="form-control" id="selectLieux">
                        <option value="">{{ field_label(sortieForm.lieu) }}</option>

                        {% for id, nom in field_choices(sortieForm.lieu) %}
                            <option value="{{ id }}">{{ nom }}</option>
                        {% endfor %}
                    </select>
                </div>
                <br>
                <div class="justify-center ml-52 w-80">

                    {{ form_widget(sortieForm.ajouter, {'attr': {'class': 'btn btn-neutral m-1'}}) }}
                </div>
                {{ form_row(sortieForm._token) }}
                {{ form_end(sortieForm, {render_rest: false}) }}
            </div>
        </div>

        <div class="flex items-center space-x-4">
            <div class="bg-white rounded px-8 pt-6 pb-8 mb-2 w-full">
                <div class="flex items-center mb-2 max-w-3xl">
                    <select id="selectLocalisation" onclick="window.coordonnee">
                        <option value="0">Choisir une ville</option>
                    </select>
                    <p class="mx-2 mr-4">ou</p>
                    <div class="flex items-center">
                        <label for="adresse" class="mr-2 text-al" style="width: 250px;">Saisissez une adresse</label>
                        <input type="text" class="flex-grow" id="adresse" name="adresse"
                               onchange="window.localisationLieu()"/>
                    </div>
                </div>

                <div id="map" class="mt-8" style="height: 400px; width: 600px;"></div>
            </div>
        </div>
    </div>
{% endblock %}