{% extends 'base.html.twig' %}

{% block body %}




    <div class="FormSearch m-2">
        {{ form_start(form) }}
        {{ form_widget(form.nom) }}

        <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" type="submit">Filtrer
        </button>
        {{ form_end(form) }}

    </div>

    <table class="table">
        <thead>
        <tr>
            <th>Nom de la sortie</th>
            <th>Date de d√©but</th>
            <th>Nombre de participants</th>
            <th>Description</th>
        </tr>
        </thead>
        <tbody>
