{% extends 'base.html.twig' %}

{% block body %}

    {# /*********************** FORMULAIRE DE RECHERCHE *******************************/ #}
    <div class="FormSearch m-2">
        {{ form_start(form) }}
        <div class="grid grid-cols-4 gap-4">
            <div>
                {{ form_widget(form.nom) }}
            </div>
            <div>
                {{ form_row(form.dateMin) }}
            </div>
            <div>
                {{ form_row(form.dateMax) }}
            </div>
            <div>
                <button class="bg-blue-600 hover:bg-blue-950 text-white font-bold py-2 px-4 rounded" type="submit">
                    Filtrer
                </button>
            </div>
        </div>
        {{ form_end(form) }}
    </div>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-8">
        {% for event in sorties %}
            <div class="card card-side bg-base-100 shadow-xl">
                <div class="card-body">
                    {% if event.etat.id != 1 %}
                        <h2 class="text-center card-title font-bold">{{ event.nom }}</h2>
                        <span>{{ event.infosSortie }} {% if event in user.sortiesParticipants %}
                                ✅Vous y participez !
                            {% endif %}</span>

                        <p>Début : {{ event.dateHeureDebut |date('d-m-Y') }} - Fin
                            : {{ event.dateHeureFin |date('d-m-Y') }}</p>
                        <p>
                            <a class="link link-success"
                               href="{{ path('profil_participant_detail',{'id' : event.organisateur.id}) }}">{{ event.organisateur.pseudo }} </a>
                        </p>
                        <p> XXXXX participants sur {{ event.nbInscriptionsMax }}</p>
                        <p>Vous pouvez vous inscrir jusqu'au {{ event.dateLimiteInscription |date('d-m-Y') }}</p>
                        <td><a class="btn btn-sm m-1" id="lien" href="{{ path('sortie_detail', {'id' : event.id}) }}">
                                detail
                            </a></td>

                        <td>
                            {% if event.etat.id == 2
                                and event.dateLimiteInscription > now
                                and event.participants.count < event.nbInscriptionsMax
                                and now < event.dateHeureDebut
                                and user != event.organisateur %}

                                {% if  event not in user.sortiesParticipants %}
                                    <a class="btn btn-neutral m-1" id="lien"
                                       href="{{ path('participation_inscription', {'id' : event.id}) }}">
                                        participer
                                    </a>
                                {% endif %}
                            {% endif %}
                        </td>
                        {% for personne in event.participants %}
                            {% if personne == user and event.dateHeureDebut > now %}
                                <td><a class="btn btn-sm m-1" id="lien"
                                       href="{{ path('participation_annuler', {'id' : event.id}) }}">
                                        Annuler la participation
                                    </a></td>
                            {% endif %}
                        {% endfor %}
                        {% if event.etat.id == 5 or event.etat.id == 6 or event.etat.id == 3 %}
                            <div class="text-red-500">{{ event.etat.libelle }}</div>
                        {% else %}
                            <div class="text-green-500">{{ event.etat.libelle }}</div>
                        {% endif %}
                    {% endif %}
                </div>
            </div>
        {% endfor %}
    </div>
    {#    </table> #}



{% endblock %}

