{% extends 'base.html.twig' %}

{% block title %}Ville{% endblock %}

{% block body %}
    <h1>Ville</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ ville.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ ville.nom }}</td>
            </tr>
            <tr>
                <th>CodePostal</th>
                <td>{{ ville.codePostal }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-sm m-1" href="{{ path('app_ville_admin_index') }}">Retour</a>

    <a class="btn btn-sm m-1" href="{{ path('app_ville_admin_edit', {'id': ville.id}) }}">Modifier</a>

    {{ include('ville_admin/_delete_form.html.twig') }}
{% endblock %}
